<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="com.swstudio.dunkin.eye_fi.PopupActivity"
    android:background="#ff0071bd">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EYE-FI 도움요청"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:textSize="25dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="OOO님으로부터\n도움요청이 왔습니다.\n전화연결하시겠습니까?"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffa2a2a2"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:lineSpacingExtra="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#900071bd"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_margin="3dp"
            android:text="나중에 연결을 원하시면 바깥을 눌러주세요."
            android:id="@+id/decr" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/call"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="전화연결"
                android:layout_gravity="center_vertical"
                android:background="#ff0071bd"
                android:textColor="#ffffffff"
                android:layout_margin="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:textSize="10dp" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="취소"
                android:layout_gravity="center_vertical"
                android:background="#ff0071bd"
                android:textColor="#ffffffff"
                android:layout_margin="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
